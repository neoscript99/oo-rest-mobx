{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*"
  ]
}
